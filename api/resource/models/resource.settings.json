{
  "kind": "collectionType",
  "collectionName": "resources",
  "info": {
    "name": "Resource",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "cover_photo": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "is_recommended": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "references": {
      "type": "component",
      "repeatable": true,
      "component": "article.source",
      "required": true,
      "min": 1
    },
    "documents": {
      "type": "component",
      "repeatable": true,
      "component": "article.document"
    },
    "publisher": {
      "model": "publisher"
    },
    "category": {
      "model": "category"
    },
    "language": {
      "model": "language"
    },
    "resource_group": {
      "model": "resource-group"
    }
  }
}
